    29 00000012 66A5                                movsw
    30 00000014 66AD                                lodsw
    31 00000016 E2FA                            loop repeta
    32                                          
    33                                          ; sortarea cuvintelor din cuvinte_inferioare
    34                                          while_loop:
    35 00000018 B902000000                          mov ecx, len-1
    36 0000001D E331                                jecxz final_loop
    37 0000001F FC                                  cld
    38 00000020 BE[0C000000]                        mov esi, cuvinte_inferioare
    39 00000025 BF[0E000000]                        mov edi, cuvinte_inferioare+2
    40 0000002A C605[1E000000]00                    mov byte [over], 0
    41                                              
